---
import '../styles/global.css';
import { ClientRouter } from 'astro:transitions';
import Navigation from '../components/Navigation.astro';

interface Props {
  title?: string;
  description?: string;
}

const { 
  title = "Michal Trs | Joy is in your own hands", 
  description = "Personal brand focus on CTO leadership, AI, and the philosophy of personal responsibility for joy." 
} = Astro.props;
---
<html lang='cs'>
  <head>
    <meta charset='utf-8' />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Outfit:wght@500;700;800&display=swap" rel="stylesheet">
    
    <ClientRouter />
  </head>
  <body class="min-h-screen flex flex-col">
    <Navigation />
    <slot />
    
    <footer class="mt-auto py-12 px-6 border-t border-charcoal/5 text-center bg-white">
      <div class="max-w-4xl mx-auto flex flex-col items-center gap-6">
        <nav class="flex gap-8 text-sm font-semibold text-charcoal/60">
          <a href="/#professional" class="hover:text-sky-blue transition-colors">Profesní cesta</a>
          <a href="/#personal" class="hover:text-joy-yellow transition-colors">Osobní radost</a>
          <a href="/vault" class="hover:text-charcoal text-charcoal/40 underline decoration-sky-blue underline-offset-4">The Vault (Archiv)</a>
        </nav>
        
        <p class="text-sm text-charcoal/40 font-medium">
          &copy; {new Date().getFullYear()} Michal Trs. Joy is in your own hands.
        </p>
      </div>
    </footer>
  </body>
</html>
