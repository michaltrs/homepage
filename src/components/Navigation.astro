---
const links = [
  { href: '/#professional', label: 'Profesní cesta' },
  { href: '/#personal', label: 'Osobní radosti' },
  { href: '/vault', label: 'The Vault' },
];
---

<nav class="sticky top-0 z-50 w-full px-6 py-4">
  <div class="max-w-5xl mx-auto">
    <div class="glass-card px-6 py-3 flex items-center justify-between">
      <!-- Logo / Name -->
      <a href="/" class="group flex items-center gap-2">
        <div class="w-8 h-8 rounded-lg bg-sky-blue flex items-center justify-center text-white font-black text-xs group-hover:rotate-12 transition-transform">MT</div>
        <span class="font-outfit font-extrabold text-charcoal tracking-tight hidden sm:block">Michal Trs</span>
      </a>

      <!-- Desktop Links -->
      <div class="flex items-center gap-1 sm:gap-6">
        {links.map(link => (
          <a 
            href={link.href} 
            class="text-[11px] sm:text-xs font-bold uppercase tracking-widest text-charcoal/40 hover:text-sky-blue transition-colors px-2 py-1"
          >
            {link.label}
          </a>
        ))}
      </div>
    </div>
  </div>
</nav>

<style>
  .font-outfit { font-family: 'Outfit', sans-serif; }
</style>
